<article ng-app="customers" ng-controller="CustomerSearchCtrl">
  <header>
    <h1 class="h2">Customer Search</h1>
  </header>
  <section class="search-form">
    <form>
      <div class="input-group input-group-lg">
        <label for="keywords" class="sr-only">keywords</label>
        <input type="text"
               name="keywords"
               placeholder="First Name, Last Name, or Email Address" class="form-control input-lg"
               ng-model="keywords">
        <span class="input-group-btn">
          <button class="btn btn-primary btn-lg" ng-click="search(keywords)" >Find Customers</button>
        </span>
      </div>
    </form>
    <h1 class="searchedFor" ng-if="searchedFor">
      <small>Seached For:</small> {{searchedFor}}
    </h1>
  </section>
  <section class="search-results">
    <header>
      <h1 class="h3">Results({{customers.length}})</h1>
    </header>
    <%= render partial: "pager",locals: {keywords: @keywords, page: @page} %>
    <ol class="list-group">
      <li class="list-group-item clearfix" ng-repeat="customer in customers">
        <h3 class="pull-right">
          <small class="text-uppercase">Joined</small>
          {{customer.created_at|date}}
        </h3>
        <h2>
          {{customer.first_name}} {{customer.last_name}}
          <small>@{{customer.username}}</small>
        </h2>
        <h4>{{customer.email}}</h4>
      </li>
    </ol>
    <%= render partial: "pager",locals: {keywords: @keywords, page: @page} %>
  </section>
</article>
